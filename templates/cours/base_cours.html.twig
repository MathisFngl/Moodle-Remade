{% extends 'base.html.twig' %}

{% block title %}Cours {{ cours.code }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/cours_acceuil.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="conteneur">
        <div class="path_container">
            <ol class="path_list">
                <li class="path_item"><a href="{{ path('app_dashboard') }}">Accueil</a></li>
                <li class="path_item"><a href="#fise_info">FISE Informatique</a></li>
                <li class="path_item"><span>{{ cours.code }} : {{ cours.nom }}</span></li>
            </ol>
        </div>

        <div class="title_container">
            <div class="code_uv_container"><h1>{{ cours.code }}</h1></div>
            <div class="title_uv_container"><h1>{{ cours.nom }}</h1></div>
        </div>

        <div class="cours_nav">
            <a href="{{ path('cours_par_code', { code: cours.code }) }}" class="{% if nav == 'cours' %}current{% endif %}">Cours</a>
            <a href="{{ path('cours_participants', { code: cours.code }) }}" class="{% if nav == 'participants' %}current{% endif %}">Participants</a>
            {% if is_granted('ROLE_PROFESSEUR') %} <a href="{{ path('cours_notes', { code: cours.code }) }}" class="{% if nav == 'notes' %}current{% endif %}">Notes</a> {% endif%}
        </div>

        {% block cours_content %}{% endblock %}
    </div>

    {% block cours_scripts %}
        <script src="{{ asset('scripts/script.js') }}"></script>
    {% endblock %}
{% endblock %}
