{# MODALE UE #}
<div class="modal fade" id="ueModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form class="modal-content" id="ueForm" enctype="multipart/form-data">
            <div class="modal-header">
                <h5 class="modal-title">Créer / Modifier une UE</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Saisir le code de l'UE (lecture seule) -->
                <div class="mb-3">
                    <label class="form-label">Code</label>
                    <input type="text" class="form-control bg-light text-muted" id="ueCode" required readonly>
                </div>

                <!-- Saisir le nom de l'UE -->
                <div class="mb-3">
                    <label class="form-label">Nom</label>
                    <input type="text" class="form-control" id="ueNom" required>
                </div>

                <!-- Ajouter une description à l'UE -->
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea class="form-control" id="ueDesc" rows="3"></textarea>
                </div>

                <!-- Ajout une image pour l'UE -->
                <div class="mb-3">
                    <label class="form-label">Image</label>
                    <input type="file" class="form-control" id="ueImage">
                    <small class="text-muted">Choisissez une image pour cette UE</small>
                </div>

                <!-- Sélection du responsable de l'UE parmi les professeurs disponibles -->
                <div class="mb-3">
                    <label class="form-label">Responsable UE</label>
                    <select class="form-select" id="ueRespo">
                        <option value="">Sélectionner un responsable</option>
                        {% for user in users %}
                            {% if user.getRoleByIndex(0) == 'ROLE_PROFESSEUR' %}
                                <option value="{{ user.id }}">{{ user.prenom }} {{ user.nom }}</option>
                            {% endif %}
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="modal-footer">
                <!-- Bouton pour enregistrer l'UE -->
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <!-- Bouton pour fermer la modale sans enregistrer -->
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
            </div>
        </form>
    </div>
</div>

{# MODALE UTILISATEUR #}
<div class="modal fade" id="userModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form class="modal-content" id="userForm" method="post" enctype="multipart/form-data">
            <div class="modal-header">
                <h5 class="modal-title">Créer / Modifier un utilisateur</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!--  saisir le prénom et le nom de l'utilisateur -->
                <div class="d-flex justify-content-between mb-3">
                    <div class="w-45">
                        <label class="form-label">Prénom</label>
                        <input type="text" class="form-control" id="prenom" name="prenom" required>
                    </div>
                    <div class="w-45">
                        <label class="form-label">Nom</label>
                        <input type="text" class="form-control" id="nom" name="nom" required>
                    </div>
                </div>

                <!-- saisir l'email et le mot de passe -->
                <div class="d-flex justify-content-between mb-3">
                    <div class="w-45">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control bg-light text-muted" id="email" name="email" required readonly>
                    </div>
                    <div class="w-45">
                        <label class="form-label">Mot de passe</label>
                        <input type="password" class="form-control" id="password" name="password">
                    </div>
                </div>

                <!-- Sélection du rôle de l'utilisateur -->
                <div class="d-flex justify-content-between mb-3">
                    <div class="w-45">
                        <label class="form-label">Rôle</label>
                        <select class="form-select" id="role" name="role">
                            <option value="ROLE_ELEVE">Étudiant</option>
                            <option value="ROLE_PROFESSEUR">Professeur</option>
                            <option value="ROLE_ADMIN">Administrateur</option>
                        </select>
                    </div>
                    <div class="w-45 d-flex align-items-center">
                        <input class="form-check-input" type="checkbox" id="isAdmin" name="isAdmin">
                        <label class="form-check-label ms-2">Administrateur</label>
                    </div>
                </div>

                <!--  champ d'upload d'image pour la photo de profil -->
                <div class="mb-3">
                    <label class="form-label">Photo de profil</label>
                    <input type="file" class="form-control" id="photo" name="photo" accept="image/*">
                    <small class="text-muted">Format accepté : JPG, PNG, taille max 2Mo</small>
                </div>

                <!-- Sélection des UEs de l'utilisateur -->
                <div class="mb-3">
                    <label class="form-label">UEs assignées</label>
                    <div id="ueBadges" class="d-flex flex-wrap"></div>
                    <select class="form-select mt-2" id="ueSelect" name="ues[]">
                        <option value="">Ajouter une UE</option>
                        {% for ue in ues %}
                            <option value="{{ ue.code }}">{{ ue.nom }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="modal-footer">
                <!-- enregistrer l'utilisateur -->
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <!-- fermer la modale sans enregistrer -->
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
            </div>
        </form>
    </div>
</div>
