{# templates/security/login.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Connexion | Moodle UTBM</title>
    <link rel="stylesheet" href="{{ asset('styles/login.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Include Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row w-100 justify-content-center">
        <!-- Login Card -->
        <div class="col-md-6 mb-4">
            <div class="card shadow p-4">
                <h4 class="mb-4 text-center">Connexion à Moodle UTBM</h4>
                <form action="#" method="post">
                    <div class="mb-3">
                        <label for="inputMail" class="form-label">Mail</label>
                        <input type="text" value="{{ last_username }}" name="mail" id="inputMail" class="form-control" autocomplete="username" required autofocus>
                    </div>

                    <div class="mb-3">
                        <label for="inputPassword" class="form-label"><b>Mot de passe</b></label>
                        <div class="d-flex">
                            <input type="password" name="password" id="inputPassword" class="form-control flex-grow-1" autocomplete="current-password" required>
                            <button type="button" class="btn btn-sm position-relative" id="togglePassword" onclick="togglePwd()">
                                <i class="fas fa-eye-slash"></i>
                            </button>
                        </div>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button type="submit" class="btn btn-primary w-100">Se connecter</button>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" name="_remember_me" id="remember" checked>
                        <label class="form-check-label" for="remember">Se souvenir pendant 30 jours</label>
                    </div>

                    <button type="button" class="btn btn-link mt-2">Mot de passe oublié ?</button>
                </form>
                {% if error %}
                    <div class="error mt-3 text-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Stats Card -->
        <div class="col-md-6 mb-4">
            <div class="card shadow p-4">
                <h5 class="text-center mb-3">Statistiques de la plateforme</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"> Nombre d'UV : <strong>{{ nb_uv }}</strong></li>
                    <li class="list-group-item"> Utilisateurs totaux : <strong>{{ nb_utilisateurs }}</strong></li>
                    <li class="list-group-item"> Étudiants : <strong>{{ nb_etudiants }}</strong></li>
                    <li class="list-group-item"> Professeurs : <strong>{{ nb_profs }}</strong></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Include Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="{{ asset('scripts/script.js') }}"></script>
</body>
</html>
