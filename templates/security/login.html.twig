{# templates/security/login.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login to Moodle UTBM</title>
    <link rel="stylesheet" href="{{ asset('styles/login.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
<form action="#" method="post">
    <div class="container column">
        <label for="inputMail">Mail</label>
        <input type="text" value="{{ last_username }}" name="mail" id="inputMail" class="form-control" autocomplete="username" required autofocus>

        <label for="password"><b>Password</b></label>
        <div class="password-container">
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            <button type="button" id="togglePassword" class="toggle_password" onclick="togglePwd()">
                <i class="fas fa-eye-slash"></i>
            </button>
        </div>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <button class="login_button" type="submit">Login</button>

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>

        <button type="button" class="forgot_password_button">Forgot Password</button>
    </div>
</form>
{% if error %}
    <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


<script src="{{ asset('scripts/script.js') }}"></script>
</body>
</html>
